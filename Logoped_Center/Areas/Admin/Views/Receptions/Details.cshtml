@model Reception

<h1>Детали</h1>

<div>
    <h4>Прием заказа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
           Логопед
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName + model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            Клиент
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FirstName + model.Client.LastName)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Обратно...</a>
</div>
