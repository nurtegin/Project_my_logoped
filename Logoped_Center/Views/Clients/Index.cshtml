@model IEnumerable<User>


<h1>Логопеды</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                Имя / Фамилия
            </th>
            <th>
                Профессия
            </th>
            <th>
              
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
       @if (item.Proffesion == "Логопед")
       {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                Логопед
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Детальнее...</a> 
            </td>
        </tr>
       }
       else
       {
           
       }
       }
        
    </tbody>
</table>
